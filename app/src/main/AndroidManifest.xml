<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anweshabiswas.smartnation">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Darkness">
        <activity android:name=".ChooseClassActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstMenuMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudyMainActivity"
            android:parentActivityName=".FirstMenuMainActivity" />
        <activity
            android:name=".LibraryMainActivity"
            android:label="@string/title_activity_main3_library"
            android:parentActivityName=".StudyMainActivity"
            android:theme="@style/Darkness.NoActionBar" />
        <activity
            android:name=".FoodActivity"
            android:parentActivityName=".FirstMenuMainActivity" />
        <activity
            android:name=".MeetingRoomActivity"
            android:parentActivityName=".StudyMainActivity" />
        <activity
            android:name=".BlockActivity"
            android:parentActivityName=".StudyMainActivity" />
        <activity
            android:name=".IndividualFoodActivity"
            android:parentActivityName=".FoodActivity"></activity>

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true">

        </service>
    </application>

</manifest>