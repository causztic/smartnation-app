<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/QuietStudy"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#005662"
                android:padding="10dp"
                android:text="Quiet study rooms"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <CheckBox
                android:id="@+id/quietCheck"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:visibility="visible"
                android:buttonTint="@color/White" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#00838f"
            android:backgroundTintMode="screen">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/quietstudyrm" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L2"
                        android:textSize="40pt"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/Quiet_Study_lvl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:layout_gravity="center"
                        android:text="OCCUPIED"
                        android:textColor="@color/White"/>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/GroupStudy"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group study rooms"
                android:background="#003c8f"
                android:textColor="@color/White"
                android:layout_alignParentLeft="true" />

            <CheckBox
                android:id="@+id/groupCheck"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:buttonTint="@color/White" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#1565c0"
            android:backgroundTintMode="screen">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/groupstudyrm" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="L4"
                        android:textColor="@android:color/white"
                        android:textSize="40pt" />

                    <TextView
                        android:id="@+id/Group_Study_lvl4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:layout_gravity="center"
                        android:text="OCCUPIED"
                        android:textColor="@color/White"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L7"
                        android:textSize="40pt"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/Group_Study_lvl7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:layout_gravity="center"
                        android:text="OCCUPIED"
                        android:textColor="@color/White"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Recreation"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recreation rooms"
                android:background="#4527a0"
                android:textColor="@color/White"
                android:layout_alignParentLeft="true" />

            <CheckBox
                android:id="@+id/recCheck"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:buttonTint="@color/White" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#7953d2"
            android:backgroundTintMode="screen">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/recrearm" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L3"
                        android:textSize="40pt"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/Recreation_lvl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:layout_gravity="center"
                        android:text="OCCUPIED"
                        android:textColor="@color/White"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L6"
                        android:textSize="40pt"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/Recreation_lvl6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-90"
                        android:layout_gravity="center"
                        android:text="OCCUPIED"
                        android:textColor="@color/White"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
